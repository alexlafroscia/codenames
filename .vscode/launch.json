  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Server",
      "cwd": "${workspaceRoot}/packages/server",
      "runtimeArgs": ["-r", "ts-node/register"],
      "args": ["${workspaceRoot}/packages/server/src/index.ts"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Client Tests",
      "cwd": "${workspaceFolder}/packages/client",
      "program": "${workspaceFolder}/packages/client/node_modules/.bin/react-scripts-ts",
      "port": 9229,
      "args": [
        "--inspect-brk=0.0.0.0:9229",
        "test",
        "--env=jsdom",
        "--runInBand",
        "-i"
      ]
    }
  ]
}
